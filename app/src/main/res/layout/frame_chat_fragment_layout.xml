<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_chat_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:src="@drawable/user_profile"
        android:paddingRight="10dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp" />


    <TextView
        android:id="@+id/text_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/img_chat_profile"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:paddingBottom="10dp"
        android:text="txt"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_chat_not_sent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/not_sent"
        android:layout_below="@+id/text_chat_name"
        android:layout_toRightOf="@+id/img_chat_profile"

        />
    <ImageView
        android:id="@+id/img_chat_sent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/single_tick"
        android:layout_below="@+id/text_chat_name"
        android:layout_toRightOf="@+id/img_chat_profile"

        />
    <ImageView
        android:id="@+id/img_chat_delivered"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/double_tick"
        android:layout_below="@+id/text_chat_name"
        android:layout_toRightOf="@+id/img_chat_profile"

        />
    <ImageView
        android:id="@+id/img_chat_send_viewed"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/double_tick_blue"
        android:layout_below="@+id/text_chat_name"
        android:layout_toRightOf="@+id/img_chat_profile"

        />


    <TextView

        android:id="@+id/text_chat_latest_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_chat_name"
        android:layout_below="@+id/text_chat_name"
        android:paddingLeft="25dp"
        android:textColor="@color/colorGrey"
        android:layout_toRightOf="@+id/img_chat_profile"
        android:text="txt"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"
        android:layout_alignBaseline="@+id/text_chat_name"
        android:layout_alignBottom="@+id/text_chat_name"
        android:layout_alignParentRight="true"
        android:text="txt"
        android:paddingEnd="@dimen/fab_margin"
        android:textSize="16sp" />
    <View
        android:id="@+id/view_chat_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:background="#e1e0e0"
        android:layout_below="@+id/img_chat_profile"/>

</RelativeLayout>
